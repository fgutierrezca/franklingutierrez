---
import { Image } from 'astro:assets'

interface TechItem {
    name: string;
    src: string;
}

const { technologies } = Astro.props as { technologies: TechItem[] };
---

<div class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-6 gap-6 mt-6">
    {
        technologies.map((tech: TechItem) => (
            <div class="flex flex-col items-center">
                <Image 
                    src={`/images/icons/${tech.src}`}
                    alt={tech.name}
                    width={48} 
                    height={48} 
                    class="w-12 h-12"
                />
                <span class="text-sm text-gray-600 mt-2">{tech.name}</span>
            </div>
        ))
    }
</div>